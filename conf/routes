# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /healthcheck                           controllers.Application.healthcheck()

POST     /api/users/:id/events/alarms                controllers.Application.addAlarm(id : String)
GET      /api/users/:id/events/alarms                controllers.Application.getAlarms(id : String)

GET      /ui/dashboard                               controllers.Application.overviewDashboard()
GET      /ui/users/:id/dashboard                     controllers.Application.userDashboard(id : String)

# Map static resources from the /public folder to the /assets URL path
GET     /ui/*file               controllers.Assets.versioned(path="/public", file: Asset)